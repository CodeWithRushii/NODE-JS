<%- include('../header') %>

    <!-- Form Start -->
    <div class="container-fluid pt-4 px-4 justify-contect-center">
        <div class="row g-4">

            <div class="col-sm-12 col-xl-6">
                <div class="bg-secondary rounded h-100 p-4">

                    <h6 class="mb-4">Horizontal Form</h6>

                    <form class="form-horizontal" method="post" action="/addAdmin" enctype="multipart/form-data">
                        <div class="card-body">
                            <h4 class="card-title mb-4">Personal Info</h4>

                            <!-- First Name -->
                            <div class="form-group row mb-3">
                                <label class="col-sm-3 text-right col-form-label">First Name</label>
                                <div class="col-sm-9">
                                    <input type="text" name="fname" class="form-control" placeholder="First Name Here">
                                </div>
                            </div>

                            <!-- Last Name -->
                            <div class="form-group row mb-3">
                                <label class="col-sm-3 text-right col-form-label">Last Name</label>
                                <div class="col-sm-9">
                                    <input type="text" name="lname" class="form-control" placeholder="Last Name Here">
                                </div>
                            </div>

                            <!-- Email -->
                            <div class="form-group row mb-3">
                                <label class="col-sm-3 text-right col-form-label">Email</label>
                                <div class="col-sm-9">
                                    <input type="email" name="email" class="form-control" placeholder="Email Here">
                                </div>
                            </div>

                            <!-- Password -->
                            <div class="form-group row mb-3">
                                <label class="col-sm-3 text-right col-form-label">Password</label>
                                <div class="col-sm-9">
                                    <input type="password" name="password" class="form-control"
                                        placeholder="Password Here">
                                </div>
                            </div>

                            <!-- Contact -->
                            <div class="form-group row mb-3">
                                <label class="col-sm-3 text-right col-form-label">Contact No</label>
                                <div class="col-sm-9">
                                    <input type="text" name="contact" class="form-control"
                                        placeholder="Contact No Here">
                                </div>
                            </div>

                            <!-- Gender -->
                            <div class="form-group row mb-3">
                                <label class="col-sm-3 text-right col-form-label">Gender</label>
                                <div class="col-sm-9">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="gender" value="Male"
                                            id="male">
                                        <label class="form-check-label" for="male">Male</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="gender" value="Female"
                                            id="female">
                                        <label class="form-check-label" for="female">Female</label>
                                    </div>
                                </div>
                            </div>

                            <!-- Hobby -->
                            <div class="form-group row mb-3">
                                <label class="col-sm-3 text-right col-form-label">Hobby</label>
                                <div class="col-sm-9">
                                    <% ["Reading","Playing","Other"].forEach((hobby,i)=>{ %>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="hobby[]"
                                                value="<%= hobby %>" id="hobby<%= i %>">
                                            <label class="form-check-label" for="hobby<%= i %>">
                                                <%= hobby %>
                                            </label>
                                        </div>
                                        <% }) %>
                                </div>
                            </div>

                            <!-- City -->
                            <div class="form-group row mb-3">
                                <label class="col-sm-3 text-right col-form-label">City</label>
                                <div class="col-sm-9">
                                    <select class="form-select" name="city">
                                        <option value="">Select City</option>
                                        <% [ "Ahmedabad"
                                            ,"Surat","Vadodara","Rajkot","Bhavnagar","Jamnagar","Junagadh","Navsari","Anand","Gandhinagar", "Mumbai"
                                            ,"Pune","Nagpur","Nashik","Aurangabad","Thane","Solapur","Kolhapur","Amravati", "Jaipur"
                                            ,"Jodhpur","Udaipur","Kota","Ajmer","Bikaner","Alwar", "New Delhi"
                                            ,"Lucknow"
                                            ,"Kanpur","Varanasi","Agra","Noida","Ghaziabad","Meerut","Prayagraj","Gorakhpur", "Bhopal"
                                            ,"Indore","Jabalpur","Gwalior","Ujjain","Sagar", "Bengaluru"
                                            ,"Mysuru","Mangaluru","Hubli","Belagavi","Davanagere", "Chennai"
                                            ,"Coimbatore","Madurai","Salem","Tiruchirappalli","Erode","Vellore", "Hyderabad"
                                            ,"Warangal","Nizamabad","Karimnagar", "Visakhapatnam"
                                            ,"Vijayawada","Guntur","Nellore","Tirupati","Kurnool", "Kochi"
                                            ,"Thiruvananthapuram","Kozhikode","Thrissur","Alappuzha", "Kolkata"
                                            ,"Howrah","Durgapur","Asansol","Siliguri", "Chandigarh"
                                            ,"Ludhiana","Amritsar","Jalandhar","Patiala", "Gurugram"
                                            ,"Faridabad","Panipat","Ambala","Hisar", "Patna"
                                            ,"Gaya","Bhagalpur","Muzaffarpur", "Ranchi"
                                            ,"Jamshedpur","Dhanbad", "Bhubaneswar"
                                            ,"Cuttack","Rourkela","Sambalpur", "Guwahati"
                                            ,"Dibrugarh","Silchar","Jorhat", "Raipur"
                                            ,"Bilaspur","Durg","Bhilai", "Shimla" ,"Manali","Dharamshala", "Dehradun"
                                            ,"Haridwar","Roorkee","Nainital", "Srinagar" ,"Jammu", "Panaji"
                                            ,"Margao","Vasco da Gama", "Imphal"
                                            ,"Aizawl","Shillong","Agartala","Kohima","Itanagar", "Puducherry"
                                            ,"PortBlair","Daman","Silvassa","Kavaratti","Leh" ].map(city=> { %> <option
                                                value="<%= city %>">
                                            <option value="<%= city %>">
                                                <%= city %>
                                            </option>
                                            <% }) %>
                                    </select>
                                </div>
                            </div>

                            <!-- About -->
                            <div class="form-group row mb-3">
                                <label class="col-sm-3 text-right col-form-label">About</label>
                                <div class="col-sm-9">
                                    <textarea name="about" class="form-control" rows="3"></textarea>
                                </div>
                            </div>

                            <!-- Profile Image -->
                            <div class="form-group row mb-3">
                                <label class="col-sm-3 text-right col-form-label">Profile Image</label>
                                <div class="col-sm-9">
                                    <input type="file" name="profileimg" class="form-control">
                                </div>
                            </div>

                        </div>

                        <!-- Submit -->
                        <div class="border-top pt-3">
                            <div class="card-body">
                                <button type="submit" class="btn btn-primary px-4">Submit</button>
                            </div>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>

    <%- include('../footer') %>