<%- include('../header') %>

    <div class="container-fluid pt-4 px-4">
        <div class="row g-4">
            <div class="col-sm-12">
                <div class="bg-secondary rounded h-100 p-4">
                    <h6 class="mb-4">Subcategories</h6>
                    <div class="table-responsive">
                        <table class="table table-hover text-center">
                            <thead class="text-center">
                                <tr>
                                    <th>No</th>
                                    <th>Subcategory Name</th>
                                    <th>Category Name</th>
                                    <th>Category Image</th>
                                    <th colspan="2">Action</th>
                                </tr>
                            </thead>
                            <tbody class="text-center">
                                <% allSubCategory.forEach((data, index)=> { %>
                                    <tr>
                                        <td>
                                            <%= index + 1 %>
                                        </td>
                                        <td>
                                            <%= data.subcategory_name %>
                                        </td>
                                        <td>
                                            <%= data.category_id ? data.category_id.category_name : '-' %>
                                        </td>
                                        <td>
                                            <img src="../<%= data.category_id.category_image %>" width="50px"
                                                height="50px" />
                                        </td>
                                        <td>
                                            <button class="btn btn-danger"><a
                                                    href="/subcategory/deleteSubCategory?Id=<%= data._id %>"
                                                    style="color: white;">Delete</a></button>
                                        </td>
                                        <td>
                                            <button class="btn btn-warning"><a
                                                    href="/subcategory/editSubCategory/<%= data._id %>"
                                                    style="color: white;">Edit</a></button>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../footer') %>