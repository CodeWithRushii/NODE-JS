        <nav class="navbar navbar-expand-lg navbar-light fixed-top">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <img src="images/Skytouch Logo 1.png" alt="" width="100px">
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link active" href="#home">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#about">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#Product">All Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#contact">Contact</a>
                        </li>
                        <li class="nav-item ms-lg-3">
                            <a href="/addProduct" class="btn btn-primary-custom">
                                <i class="bi bi-plus-circle me-2"></i>Add Product
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Hero Section -->
    <section class="hero-section" id="home">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8 ">
                    <h1 class="hero-title">Luxury Fragrances Curated with Passion</h1>
                    <p class="lead mb-4">Discover our exclusive collection of perfumes, body sprays, room fragrances,
                        and attars from around the world.</p>
                    <a href="#featured" class="btn btn-primary-custom me-3">Browse Collection</a>
                </div>
            </div>
        </div>
    </section>

    <!-- About Section -->
    <section class="about-section" id="about">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg mb-5 mb-lg-0">
                    <h2 class="section-title">About Our Collection</h2>
                    <p class="mb-4">
                        Our perfume management system helps you organize perfumes, body sprays, room sprays, and attars
                        with ease.
                        You can add, update, and remove products while keeping pricing and images cleanly managed.
                    </p>
                    <p class="mb-4">
                        We specialize in curating luxury fragrances from around the world, offering a diverse selection
                        for every preference and occasion. Our collection features both classic and contemporary scents
                        crafted by renowned perfumers.
                    </p>
                    <div class="row mt-4">
                        <div class="col-6">
                            <h4 class="fw-semibold">200+</h4>
                            <p class="text-muted">Unique Fragrances</p>
                        </div>
                        <div class="col-6">
                            <h4 class="fw-semibold">50+</h4>
                            <p class="text-muted">Brands Worldwide</p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <!-- Featured Products Section (Dynamic from Database) -->
    <section class="featured-section" id="Product">
        <div class="container">
            <h2 class="section-title center text-center">Featured Products</h2>
            <p class="text-center text-muted mb-5">Discover our handpicked selection of premium fragrances from your
                collection</p>

            <% if (allProducts && allProducts.length> 0) { %>
                <div class="row g-4">
                    <% allProducts.slice(0, 4).forEach(p=> { %>
                        <div class="col-lg-3 col-md-6">
                            <div class="product-card">
                                <img src="../<%= p.image %>" class="product-img" alt="<%= p.product_name %>">
                                <div class="card-body p-4">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h5 class="card-title mb-0">
                                            <%= p.product_name %>
                                        </h5>
                                        <span class="badge badge-custom">
                                            <%= p.category %>
                                        </span>
                                    </div>
                                    <p class="text-muted small mb-3">
                                        <%= p.description %>
                                    </p>
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="product-price">â‚¹ <%=
                                                Number(p.product_Price).toLocaleString("en-IN") %></span>
                                        <span class="badge bg-light text-dark">
                                            <%= p.gender %>
                                        </span>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">
                                            <i class="bi bi-tag me-1"></i>
                                            <%= p.fragrance_type %>
                                        </small>

                                        <small class="text-muted">
                                            <i class="bi bi-droplet me-1"></i>
                                            <%= p.usage %>
                                        </small>
                                    </div>

                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">
                                            <i class="bi bi-box me-1"></i>
                                            <%= p.size %>
                                        </small>
                                    </div>
                                    <div class="product-action-buttons">
                                        <a href="/editProduct/<%= p._id %>" class="btn btn-sm btn-outline-warning">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <a href="/deleteProduct?id=<%= p._id %>" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>
                <% } else { %>
                    <div class="text-center py-5">
                        <div class="mb-4">
                            <img src="images/Skytouch Logo .png" alt="" width="100px">
                        </div>
                        <h4 class="mb-3">No Products Available</h4>
                        <p class="text-muted mb-4">Add your first perfume product to start showcasing
                            your
                            collection</p>
                        <a href="/addProduct" class="btn btn-primary-custom">
                            <i class="bi bi-plus-circle me-2"></i>Add First Product
                        </a>
                    </div>
                    <% } %>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="stats-section">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-3 col-6 mb-4">
                    <div class="stat-number">
                        <%= allProducts ? allProducts.length : 0 %>
                    </div>
                    <div class="stat-label">Total Products</div>
                </div>
                <div class="col-md-3 col-6 mb-4">
                    <% let perfumeCount=0; let attarCount=0; let bodysprayCount=0; let roomsprayCount=0; if
                        (allProducts) { allProducts.forEach(p=> {
                        if (p.category == 'PERFUME') perfumeCount++;
                        if (p.category == 'ATTAR') attarCount++;
                        if (p.category == 'BODY SPRAY' ) bodysprayCount++;
                        if (p.category == 'ROOM SPRAY' ) roomsprayCount++;

                        });
                        }
                        %>
                        <div class="stat-number">
                            <%= perfumeCount %>
                        </div>
                        <div class="stat-label">Perfumes</div>
                </div>
                <div class="col-md-3 col-6 mb-4">
                    <div class="stat-number">
                        <%= attarCount %>
                    </div>
                    <div class="stat-label">Attars</div>
                </div>
                <div class="col-md-3 col-6 mb-4">
                    <div class="stat-number">
                        <%= roomsprayCount %>
                    </div>
                    <div class="stat-label">Room Sprays</div>
                </div>
            </div>
        </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section class="contact-section" id="contact">
        <div class="container">
            <h2 class="section-title center text-center">Contact Us</h2>
            <p class="text-center text-muted mb-5">Get in touch for inquiries about our fragrance collection</p>

            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <div class="contact-form">
                        <form>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="name" class="form-label">Full Name</label>
                                    <input type="text" class="form-control" id="name" placeholder="Your Name">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="email" class="form-label">Email Address</label>
                                    <input type="email" class="form-control" id="email"
                                        placeholder="your.email@example.com">
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="subject" class="form-label">Subject</label>
                                <input type="text" class="form-control" id="subject" placeholder="How can we help you?">
                            </div>
                            <div class="mb-3">
                                <label for="message" class="form-label">Message</label>
                                <textarea class="form-control" id="message" rows="5"
                                    placeholder="Your message here..."></textarea>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary-custom px-5">Send Message</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mb-4">
                    <img src="images/Skytouch Logo footer.png" alt="" width="120px">
                    <p class="mt-3">Luxury fragrances curated with passion from around the world. We bring you the
                        finest scents for every occasion.</p>
                    <div class="social-icons mt-4">
                        <a href="https://www.facebook.com/share/1AKmTjnKVE/" target="_blank"><i
                                class="bi bi-facebook"></i></a>
                        <a href="https://www.instagram.com/skytouchperfume?igsh=anpkb3I4Zmh6ZzF4" target="_blank"><i
                                class="bi bi-instagram"></i></a>
                        <a href="https://wa.me/918140253585" target="_blank"><i class="bi bi-whatsapp"></i></a>
                    </div>
                </div>

                <div class="col-lg-2 col-md-6 mb-4">
                    <h5>Quick Links</h5>
                    <div class="footer-links">
                        <a href="#home">Home</a>
                        <a href="#about">About</a>
                        <a href="#featured">Featured Products</a>
                        <a href="#management">All Products</a>
                        <a href="#contact">Contact</a>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 mb-4">
                    <h5>Categories</h5>
                    <div class="footer-links">
                        <% const categories=new Set(); if (allProducts) { allProducts.forEach(p=> {
                            if (p.category) categories.add(p.category);
                            });
                            }
                            const categoryArray = Array.from(categories);
                            %>
                            <% if (categoryArray.length> 0) { %>
                                <% categoryArray.forEach(cat=> { %>
                                    <a href="#">
                                        <%= cat %>
                                    </a>
                                    <% }) %>
                                        <% } else { %>
                                            <a href="#">Perfumes</a>
                                            <a href="#">Body Sprays</a>
                                            <a href="#">Room Sprays</a>
                                            <a href="#">Attars</a>
                                            <a href="#">Luxury Collections</a>
                                            <% } %>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 mb-4">
                    <h5>Contact Info</h5>
                    <div class="footer-links">
                        <p><i class="bi bi-geo-alt me-2"></i> bhavani nagar, 11, Lambe Hanuman Rd, Matavadi, Shivnagar
                            Society, Varachha, Surat, Gujarat 395006</p>
                        <p><i class="bi bi-telephone me-2"></i> +91 81402 53585</p>
                        <p><i class="bi bi-envelope me-2"></i> skytouchperfume@gmail.com</p>
                    </div>
                </div>
            </div>

            <div class="copyright">
                <p>&copy; 2026 SKY TOUCH PERFUME. All rights reserved. |
                    <%= allProducts ? allProducts.length : 0 %> Products |
                        Designed with <i class="bi bi-heart-fill text-danger"></i> for fragrance lovers
                </p>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();

                const targetId = this.getAttribute('href');
                if (targetId === '#') return;

                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    window.scrollTo({
                        top: targetElement.offsetTop - 80,
                        behavior: 'smooth'
                    });
                }
            });
        });

        // Navbar background on scroll
        window.addEventListener('scroll', function () {
            const navbar = document.querySelector('.navbar');
            if (window.scrollY > 100) {
                navbar.style.backgroundColor = 'rgba(255, 255, 255, 0.98)';
                navbar.style.boxShadow = '0 5px 20px rgba(0, 0, 0, 0.1)';
            } else {
                navbar.style.backgroundColor = 'rgba(255, 255, 255, 0.95)';
                navbar.style.boxShadow = '0 2px 10px rgba(0, 0, 0, 0.05)';
            }
        });

        // Set active nav link based on scroll position
        window.addEventListener('scroll', function () {
            const sections = document.querySelectorAll('section');
            const navLinks = document.querySelectorAll('.nav-link');

            let current = '';

            sections.forEach(section => {
                const sectionTop = section.offsetTop;
                const sectionHeight = section.clientHeight;

                if (scrollY >= (sectionTop - 150)) {
                    current = section.getAttribute('id');
                }
            });

            navLinks.forEach(link => {
                link.classList.remove('active');
                if (link.getAttribute('href') === `#${current}`) {
                    link.classList.add('active');
                }
            });
        });


        // Update stats dynamically
        document.addEventListener('DOMContentLoaded', function () {
            // This function would typically be called when products are loaded
            // For now, we're using server-side rendering to show counts
        });
    </script>
</body>

</html>