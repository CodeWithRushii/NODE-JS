<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>E-COMMERCE</title>
    <link rel="stylesheet" href="/ViewProduct.css">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">


</head>

<body>

    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-dark gradient-bg px-4">
        <a class="navbar-brand fw-semibold" href="/">
            <i class="bi bi-bag-check-fill me-2"></i>E-Commerce
        </a>

        <div class="ms-auto d-flex align-items-center gap-3">
            <div class="stat-badge">
                <i class="bi bi-box-seam"></i>
                <span>Total Products : <strong>
                        <%= allProducts.length %>
                    </strong></span>
            </div>


            <!-- Add Product Button -->
            <a href="/AddProduct" class="btn btn-sm btn-light">
                <i class="bi bi-plus-lg"></i> Add Product
            </a>
        </div>
    </nav>




    <div class="container my-5">


        <h1 style="color: white;" class="mb-5 pb-2">Product List</h1>

        <div class="row g-4">

            <% allProducts.map((product)=> { %>
                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12">
                    <div class="card product-card h-100">

                        <div class="product-img-box">
                            <img src="<%= product.ProductImage %>" alt="Product Image">
                        </div>

                        <div class="card-body d-flex flex-column">
                            <h6 class="product-title">
                                <%= product.ProductName %>
                            </h6>

                            <span class="brand mb-1">
                                <%= product.ProductBrand %>
                            </span>

                            <div class="price mb-2">
                                ₹ <%= Number(product.ProductPrice).toLocaleString('en-IN') %>
                            </div>

                            <span class="category mb-3">
                                <%= product.ProductCategory %>
                            </span>



                            <div class="mt-auto action-btns d-flex justify-content-between">
                                <a href="/EditProduct/<%= product._id %>" class="btn btn-outline-primary btn-sm">
                                    Edit
                                </a>
                                <a href="/DeleteProduct?id=<%= product._id %>" class="btn btn-outline-danger btn-sm">
                                    Delete
                                </a>
                            </div>
                        </div>

                    </div>
                </div>
                <% }) %>

        </div>

    </div>

    <!-- Footer -->
    <footer class="mt-5 py-3 gradient-bg text-light">
        <div class="container d-flex justify-content-between align-items-center flex-wrap gap-2">
            <span class="small">
                © 2025 E-Commerce Dashboard
            </span>

            <div class="d-flex gap-3">
                <a href="#" class="text-light text-decoration-none small">Privacy</a>
                <a href="#" class="text-light text-decoration-none small">Terms</a>
                <a href="#" class="text-light text-decoration-none small">Support</a>
            </div>
        </div>
    </footer>



</body>

</html>